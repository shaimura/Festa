<%= render 'layouts/header' %>

<body class="staff_show">

	<div class="container " style="background-color: rgba(255,165,0,0.5);">
		<div style="background-color: rgba(255,165,0,0.2);">
			<h1 class="staff"> <strong> スタッフページ </strong> </h1>

			<div class="row">
				<div class="col-lg-7" style="padding: 0 40px 0 40px;">


					<div style="margin: 30px 10px 30px 0;">
				<table class="table">
					<thead>
						<tr>
							<th class="staff-info" colspan="2" style="text-align: center; font-size: 24px;">スタッフ情報</th>
						</tr>
					</thead>
					<tr class="staff-info">
						<td>名前</td>
						<td> <%= @staff.last_name %><%= @staff.first_name %> </td>
					</tr>
					<tr class="staff-info">
						<td>住所</td>
						<td> <%= @staff.address %> </td>
					</tr>
					<tr class="staff-info">
						<td>ポイント</td>
						<td> 総合 <%= @staff.total_point %> /使用ポイント  <%= @staff.remaining_point %> </td>
					</tr>
				</table>
			</div>


				</div>

				<div class="col-lg-5">
					<h3 class="staff-info"> 参加お祭一覧 </h3>
				</div>


			</div>

			<div class="row">
				ポイント履歴
			</div>

		</div>
	</div>

</body>


