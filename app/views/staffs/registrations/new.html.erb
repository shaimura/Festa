<%= render 'layouts/header' %>


<% if notice %>
<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only">close</span>
  </button>
  <%= notice %>
</div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only">close</span>
  </button>
  <%= alert %>
</div>
<% end %>


<p class="sign-up-text">スタッフ登録をしてお祭りに参加しよう!<br>
   お祭りに参加してポイントを貯めよう!<br>
 貯めたポイントでサイト内のプレゼントと交換できます!</p>


<div class="container">
  <div class="row">
    <p class="title-text"> スタッフ 登録 </p>
    <div class="col-lg-4 col-lg-offset-4">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "staffs/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "名前",class: "sub-sgin-text" %><br>
          <%= f.text_field :name,:size  => "50", autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :postalcode, "郵便番号",class: "sub-sgin-text" %><br>
          <%= f.text_field :postalcode,:size  => "50", autofocus: true, autocomplete: "postalcode" %>
        </div>

        <div class="field">
          <%= f.label :address, "住所",class: "sub-sgin-text" %><br>
          <%= f.text_field :address,:size  => "50", autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :telephone, "電話番号",class: "sub-sgin-text" %><br>
          <%= f.text_field :telephone,:size  => "50", autofocus: true, autocomplete: "telephone" %>
        </div>

        <div class="field">
          <%= f.label :email,class: "sub-sgin-text" %><br />
          <%= f.email_field :email,:size  => "50", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password,class: "sub-sgin-text" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password,:size  => "50", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation,class: "sub-sgin-text" %><br />
          <%= f.password_field :password_confirmation,:size  => "50", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "orange-button sign-button" %>
        </div>
      <% end %>
      <div class="">
        <%= render "staffs/shared/links" %>
      </div>
    </div>
  </div>
</div>


