<%= render 'layouts/subheader' %>


<% if notice %>
<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only">close</span>
  </button>
  <%= notice %>
</div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only">close</span>
  </button>
  <%= alert %>
</div>
<% end %>




<P class="title-text">プレゼント登録画面</P>

<div class="row">
	<div class="col-lg-5"></div>
	<div class="col-lg-7">



		<%= form_for @present, url:admins_presents_path do |present| %>

		<div style="margin-bottom: 20px">
			<%= present.label :present, "プレゼント" %><br>
			<%= present.text_field :present %>
		</div>

		<div style="margin-bottom: 20px">
			<%= present.label :present_image, "プレゼントイメージ" %><br>
			<%= present.attachment_field :present_image %>
			<div class="preview festival-new-image">プレビューが表示されます</div>
		</div>

		<div style="margin-bottom: 20px">
			<%= present.label :use_point, "必要ポイント" %>
			<%= present.number_field :use_point, min: 1 %>
		</div>

		<div style="margin-bottom: 20px">
			<%= present.submit "登録する", class: "green-button" %>
		</div>


		<% end %>

	</div>
</div>


<div class="container">
<div class="row">
	<div class="col-lg-10 col-lg-offset-1">
		<p class="title-text">プレゼント一覧</p>
			<table class="table table-bordered sub-text">
				<thead>
					<tr>
						<th style="width: 20%; text-align: center;">イメージ画像</th>
						<th style="width: 40%; text-align: center;">名称</th>
						<th style="width: 20%; text-align: center;">設定ポイント</th>
						<th colspan="2"></th>
					</tr>
				</thead>
					<% @presents.each do |present| %>
					<tbody>
					<tr>
						<td style="text-align: center;">
							<%= attachment_image_tag present, :present_image, :fill, 50, 50, format: 'jpg' %>
						</td>
						<td>
							<%= present.present %>
						</td>
		                <td>
		                	<%= present.use_point %>
		                </td>
		                <td>
		                	<div class="blue-button link-none">
			                	<p class="inquirys-index-buttn-text">
			                		<%= link_to "変更する", edit_admins_present_path(present), class: "link-none" %>
			                	</p>
			                </div>
		                </td>
		                <td>
		                	<div class="red-button link-none">
			                	<p class="inquirys-index-buttn-text">
			                		<%= link_to "削除する", admins_present_path(present), class: "link-none destroy_#{present.id}", method: :delete,data:{confirm:"本当に削除しますか？"} %>
			                	</p>
			                </div>
		                </td>
					</tr>
					<% end %>
				</tbody>
			</table>

</div>
</div>
</div>






