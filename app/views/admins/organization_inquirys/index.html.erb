<%= render 'layouts/subheader' %>

<div class="container">
	<div class="row">

		<p class="title-text"> 団体 お問い合わせ一覧　</p>


			<table class="table table-bordered sub-text">
				<thead>
					<tr>
						<th>ユーザー名</th>
						<th>お問い合わせ日</th>
						<th>お問い合わせ内容</th>
						<th>対応状況</th>
					</tr>
				</thead>
					<% @organization_inquirys.each do |inquiry| %>
					<tbody>
					<tr>
						<td><%= inquiry.organization.name %></td>
		                <td><%= inquiry.created_at.strftime('%Y/%m/%d') %></td>
		                <td><%= inquiry.message %></td>
		                <td>
		                	<%= inquiry.inquiri_status %>
		                	<% if inquiry.inquiri_status == "返信済み" %>
		                	<%= link_to "確認する",admins_organization_inquiry_path(id: inquiry.id), class: "orange-button link-none" %>
		                	<% elsif inquiry.inquiri_status == "未対応" %>
		                	: <%= link_to "返信する",admins_organization_inquiry_path(id: inquiry.id), class: "green-button link-none" %>
		                	<% end %>
		                </td>
					</tr>
					<% end %>
				</tbody>
			</table>
	</div>
</div>




<p class="pagetop"></p>


