<%= render 'layouts/subheader' %>

<div class="container">
  <div class="row">
    <p class="title-text"> 管理者 ログイン </p>
    <div class="col-lg-4 col-lg-offset-4">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email,class: "sub-sgin-text" %><br />
        <%= f.email_field :email,:size  => "50", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password,class: "sub-sgin-text" %><br />
        <%= f.password_field :password,:size  => "50", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "blue-button sign-button" %>
      </div>
    <% end %>

    <%= render "admins/shared/links" %>

    </div>
  </div>
</div>


