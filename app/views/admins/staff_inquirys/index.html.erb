<%= render 'layouts/subheader' %>

<div class="container">
	<div class="row">

		<p class="title-text"> スタッフ お問い合わせ一覧　</p>


				<table class="table table-bordered sub-text">
					<thead>
						<tr>
							<th>ユーザー名</th>
							<th>お問い合わせ日</th>
							<th>お問い合わせ内容</th>
							<th  colspan="2" style="text-align: center;">対応状況</th>
						</tr>
					</thead>
						<tbody>
							<% @staff_inquirys.each do |inquiry| %>
						<tr>
							<td><%= inquiry.staff.name %></td>
			                <td><%= inquiry.created_at.strftime('%Y/%m/%d') %></td>
			                <td><%= inquiry.message %></td>
			                <td>
			                	<%= inquiry.inquiri_status %>
			                </td>
			                <td>
			                	<% if inquiry.inquiri_status == "返信済み" %>
			                	<div class="orange-button inquirys-index-buttn link-none">
			                	<p class="inquirys-index-buttn-text"><%= link_to "確認する",admins_staff_inquiry_path(id: inquiry.id), class: "link-none" %></p>
			                	</div>
			                	<% elsif inquiry.inquiri_status == "未対応" %>
			                	<div class="green-button inquirys-index-buttn link-none">
			                	<p class="inquirys-index-buttn-text"><%= link_to "返信する",admins_staff_inquiry_path(id: inquiry.id), class: "link-none" %></p>
			                	</div>
			                	<% end %>
			                </td>
						</tr>
						<% end %>
					</tbody>
				</table>
	</div>
</div>


<p class="pagetop"></p>


