<%= render 'layouts/header' %>

<div class="container">
	<div class="row">

		<p class="title-text"> スタッフ お問い合わせ一覧　</p>


			<table class="table table-bordered sub-text">
				<thead>
					<tr>
						<th>ユーザー名</th>
						<th>お問い合わせ日</th>
						<th>お問い合わせ内容</th>
						<th>対応状況</th>
					</tr>
				</thead>
					<% @staff_inquirys.each do |inquiry| %>
					<tbody>
					<tr>
						<td><%= inquiry.staff.name %></td>
		                <td><%= inquiry.created_at.strftime('%Y/%m/%d') %></td>
		                <td><%= inquiry.message %></td>
		                <td>
		                	<%= inquiry.inquiri_status %>
		                	<% if inquiry.inquiri_status == "未対応" %>
		                	: <%= link_to "返信する",admins_staff_inquiry_path(id: inquiry.id) %>
		                	<% end %>
		                </td>
					</tr>
					<% end %>
				</tbody>
			</table>
	</div>
</div>




<p class="pagetop"></p>


