<%= render 'layouts/subheader' %>
<div class="container">
  <div class="row">
    <p class="title-text"> 団体情報編集 </p>
    <div class="col-lg-4 col-lg-offset-4">

<%= form_for @organization do |organization| %>

        <div class="field">
          <%= organization.label :name, "団体名",class: "sub-sgin-text" %><br>
          <%= organization.text_field :name,:size  => "50", autofocus: true, autocomplete: "name" %>
        </div>

  <div class="field">
          <%= organization.label :postalcode, "郵便番号",class: "sub-sgin-text" %><br>
          <%= organization.text_field :postalcode,:size  => "50", autofocus: true, autocomplete: "postalcode" %>
        </div>

        <div class="field">
          <%= organization.label :address, "住所",class: "sub-sgin-text" %><br>
          <%= organization.text_field :address,:size  => "50", autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= organization.label :telephone, "電話番号",class: "sub-sgin-text" %><br>
          <%= organization.text_field :telephone,:size  => "50", autofocus: true, autocomplete: "telephone" %>
        </div>

        <div class="field">
          <%= organization.label :email,class: "sub-sgin-text" %><br />
          <%= organization.email_field :email,:size  => "50", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= organization.label :password,class: "sub-sgin-text" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= organization.password_field :password,:size  => "50", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= organization.label :password_confirmation,class: "sub-sgin-text" %><br />
          <%= organization.password_field :password_confirmation,:size  => "50", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= organization.submit "変更する", class: "green-button sign-button" %>
        </div>
      <% end %>


      <div class="orange-button index-link-buttn link-none">
        <p class="index-link-buttn-text"><%= link_to "一覧に戻る", organization_path(@organization), class: "link-none" %></p>
      </div>



    </div>
  </div>
</div>
