<%= render 'layouts/subheader' %>


<% if notice %>
<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only">close</span>
  </button>
  <%= notice %>
</div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only">close</span>
  </button>
  <%= alert %>
</div>
<% end %>



<div class="container">
  <div class="row">
    <p class="title-text"> スタッフ情報編集 </p>
    <div class="col-lg-4 col-lg-offset-4">

      <%= form_for @staff do |f| %>

        <div class="field">
          <%= f.label :name, "名前",class: "sub-sgin-text" %><br>
          <%= f.text_field :name,:size  => "50", autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :postalcode, "郵便番号",class: "sub-sgin-text" %><br>
          <%= f.text_field :postalcode,:size  => "50", autofocus: true, autocomplete: "postalcode" %>
        </div>

        <div class="field">
          <%= f.label :address, "住所",class: "sub-sgin-text" %><br>
          <%= f.text_field :address,:size  => "50", autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :telephone, "電話番号",class: "sub-sgin-text" %><br>
          <%= f.text_field :telephone,:size  => "50", autofocus: true, autocomplete: "telephone" %>
        </div>

        <div class="field">
          <%= f.label :email,class: "sub-sgin-text" %><br />
          <%= f.email_field :email,:size  => "50", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "変更する", class: "green-button sign-button" %>
        </div>
      <% end %>


      <div class="orange-button index-link-buttn link-none">
        <p class="index-link-buttn-text"><%= link_to "スタッフ詳細画面に戻る", admins_staff_path(@staff), class: "link-none" %></p>
      </div>



    </div>
  </div>
</div>


